# Toyota 4Runner Hunter Configuration
# Copy this file to .env and fill in your actual values

# Auto.dev API Configuration
AUTO_DEV_API_KEY=your_auto_dev_api_key_here

# Database Configuration
DATABASE_PATH=4runner_tracker.db

# Search Configuration
SEARCH_INTERVAL_MINUTES=60
TARGET_YEAR_MIN=1984
TARGET_YEAR_MAX=2002

# Location Configuration (for distance calculations)
SEARCH_ZIP_CODE=your_zip_code_here
# Alternative: use lat/lon instead of zip code
# SEARCH_LATITUDE=your_latitude
# SEARCH_LONGITUDE=your_longitude

# Notification Configuration
NOTIFICATION_METHODS=email,slack
EMAIL_TO=your_email@example.com
EMAIL_FROM=sender@example.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_PASSWORD=your_email_password
SLACK_WEBHOOK_URL=your_slack_webhook_url

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_SECONDS=60
API_RETRY_MAX_ATTEMPTS=3
API_RETRY_DELAY_SECONDS=5